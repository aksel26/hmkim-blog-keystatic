# ================================
# Blog (apps/blog)
# ================================

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Tech & Life Blog"

# Keystatic
KEYSTATIC_STORAGE_KIND=local
# KEYSTATIC_GITHUB_REPO=your-username/your-repo
# KEYSTATIC_GITHUB_BRANCH=main

# Optional - Map API (for Life posts location feature)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# ================================
# AI Agent (apps/agent)
# ================================

# Google AI (Gemini)
GOOGLE_API_KEY=your_gemini_api_key_here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_claude_api_key_here

# Web Search (Optional - for Tavily Search)
TAVILY_API_KEY=your_tavily_api_key_here

# Blog content path (relative to apps/agent)
BLOG_CONTENT_PATH=../blog/content

# GitHub API (for PR creation)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repo_name
GITHUB_BASE_BRANCH=main

# ================================
# Trending Keywords (apps/agent-web)
# ================================

# Naver DataLab API (Google Trends는 무료 RSS 피드 사용)
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
